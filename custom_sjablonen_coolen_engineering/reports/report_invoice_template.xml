<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document" priority="999">
        <xpath expr="//t" position="replace">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="o.with_context(lang=o.partner_id.lang)" />
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-6">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6">
                            <div>
                                <strong t-esc="doc.partner_id._get_name()"/>
                            </div>
                            <span t-field="doc.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-12">
                                    <h3><strong>Invoice</strong></h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6">
                            <h6 style="margin:0;"><strong>Your Reference</strong></h6>
                            <div class="row">
                                <div class="col-6">
                                    <p>
                                        Invoice date<br/>
                                        Invoice Reference
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p>
                                        <span t-field="doc.invoice_date" t-options="{'widget': 'date'}"/><br/>
                                        <span t-field="doc.ref"/>
                                    </p>
                                </div>
                            </div>
                            <div t-if="doc.partner_shipping_id != doc.partner_id" class="mt-2">
                                <h6 style="margin:0;"><strong>Delivery Address</strong></h6>
                                <div t-field="doc.partner_shipping_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            </div>
                        </div>
                        <div class="col-6">
                            <h6 style="margin:0;"><strong>Our reference</strong></h6>
                            <div class="row">
                                <div class="col-6">
                                    <p>
                                        <strong>Invoice nr.</strong><br/>
                                        <strong>Expiring Date</strong><br/>
                                        <t t-if="o.invoice_payment_term_id">
                                            <strong>Payment Term</strong>
                                        </t>
                                        <t t-if="o.invoice_incoterm_id">
                                            <br/>
                                            <strong>Incoterm</strong>
                                        </t>
                                    </p>
                                </div>
                                <div class="col-6">
                                    <p>
                                        <span t-field="o.name"/><br/>
                                        <span t-field="doc.invoice_date_due" t-options="{'widget': 'date'}"/><br/>
                                        <t t-if="o.invoice_payment_term_id">
                                            <span t-field="o.invoice_payment_term_id"/>
                                        </t>
                                        <t t-if="o.invoice_incoterm_id">
                                            <br/>
                                            <span t-field="o.invoice_incoterm_id"/>
                                        </t>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table class="table table-sm o_main_table mt-3">
                        <colgroup>
                            <col style="width: 10%;"/>
                            <col style="width: 50%;"/>
                            <col style="width: 10%;"/>
                            <col style="width: 15%;"/>
                            <col style="width: 15%;"/>
                        </colgroup>
                        <thead style="display: table-row-group">
                            <tr style="border: none !important;border-bottom: 1px solid black !important;">
                                <th style="border: none !important;" name="th_index" class="text-left">Pos.</th>
                                <th style="border: none !important;" name="th_description" class="text-left">Description</th>
                                <th style="border: none !important;" name="th_quantity" class="text-right">Quantity</th>
                                <th style="border: none !important;" name="th_priceunit" class="text-right">Price per unit</th>
                                <th style="border: none !important;" name="th_subtotal" class="text-right">Net amount</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-foreach="doc.invoice_line_ids" t-as="line">
                                <tr style="border: none !important;" t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td style="border: none !important;" name="td_index"><span t-esc="line_index + 1"/></td>
                                        <td style="border: none !important;" name="td_name"><span t-field="line.name"/></td>
                                        <td style="border: none !important;" name="td_quantity" class="text-right">
                                            <span t-field="line.quantity"/><br/>
                                            <span t-field="line.product_uom_id"/>
                                        </td>
                                        <td style="border: none !important;" name="td_priceunit" class="text-right">
                                            <span t-field="line.price_unit"/><br/>
                                            <t t-if="line.discount">
                                                -<span t-esc="'%0.2f' % (line.discount / 100 * line.price_unit)"/>
                                            </t>
                                        </td>
                                        <td style="border: none !important;" name="td_subtotal" class="text-right o_price_total">
                                            <span t-field="line.price_subtotal"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td style="border: none !important;" name="td_section_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td style="border: none !important;" name="td_note_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td style="border: none !important;"><strong>Subtotal</strong></td>
                                        <td style="border: none !important;" class="text-right">
                                            <span t-field="doc.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                <td style="border: none !important;"><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td style="border: none !important;" class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td style="border: none !important;">
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td style="border: none !important;" class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4" style="page-break-inside: avoid;">
                        <div class="col-12 text-center">
                            <p>
                                General terms and conditions: All our deliveries are subject to our terms and conditions.<br/>
                                These can be found at: https://www.coolen-engineering.eu/algemene-voorwaarden/
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

</odoo>
