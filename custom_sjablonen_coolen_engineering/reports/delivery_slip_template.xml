<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_delivery_document" inherit_id="stock.report_delivery_document" priority="999">
        <xpath expr="//t" position="replace">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="o.with_context(lang=o.partner_id.lang)" />
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-6">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6">
                                <h6 style="margin:0;"><strong>Delivery Address</strong></h6>
                                <strong t-esc="doc.partner_id._get_name()"/>
                                <span t-field="doc.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-12">
                                        <h3><strong>Delivery slip</strong></h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-6">
                                <h6 style="margin:0;"><strong>Your Reference</strong></h6>
                                <div class="row">
                                    <div class="col-6">
                                        <p>
                                            Order
                                        </p>
                                    </div>
                                    <div class="col-6">
                                        <p>
                                            <span t-esc="doc.sale_id and doc.sale_id.client_order_ref or ''"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <h6 style="margin:0;"><strong>Our reference</strong></h6>
                                <div class="row">
                                    <div class="col-6">
                                        <p>
                                            <span><strong>Packing Slip Number</strong></span><br/>
                                            <t t-if="doc.sale_id">
                                                <strong>Order</strong><br/>
                                            </t>
                                            <t t-if="doc.date_done">
                                                <strong>Delivery Date</strong>
                                            </t>
                                        </p>
                                    </div>
                                    <div class="col-6">
                                        <p>
                                            <span><span t-field="doc.name"/></span><br/>
                                            <t t-if="doc.sale_id">
                                                <span t-esc="doc.sale_id.name" /><br/>
                                            </t>
                                            <t t-if="doc.date_done">
                                                <span t-field="doc.date_done" t-options="{'widget': 'date'}"/>
                                            </t>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table mt-3">
                            <colgroup>
                                <col style="width: 10%;"/>
                                <col style="width: 70%;"/>
                                <col style="width: 20%;"/>
                            </colgroup>
                            <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <tr style="border: none !important;border-bottom: 1px solid black !important;">
                                    <th style="border: none !important;" name="th_index" class="text-left">Pos.</th>
                                    <th style="border: none !important;" name="th_description" class="text-left">Description</th>
                                    <th style="border: none !important;" name="th_quantity" class="text-right">Quantity</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-foreach="doc.move_ids_without_package" t-as="line">
                                    <tr style="border: none !important;">
                                        <td style="border: none !important;" name="td_index"><span t-esc="line_index + 1"/></td>
                                        <td style="border: none !important;" name="td_name">
                                            <span t-esc="line.sale_line_id and line.sale_line_id.name or line.product_id.name"/>
                                        </td>
                                        <td style="border: none !important;" name="td_quantity" class="text-right">
                                            <span t-field="line.product_uom_qty"/><br/>
                                            <span t-field="line.product_uom"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="row mt-4" style="page-break-inside: avoid;">
                            <div class="col-12 text-center">
                                <p>
                                    General terms and conditions: All our deliveries are subject to our terms and conditions.<br/>
                                    These can be found at: https://www.coolen-engineering.eu/algemene-voorwaarden/
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>

</odoo>
